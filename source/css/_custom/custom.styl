// 侧边栏的不透明
.site-overview {
  opacity: 0.5;
}

.header-inner {
  opacity: 0.8;
}

.site-overview, .header-inner {
  -webkit-transition: all .2s ease-in;
  -moz-transition: all .2s ease-in;
  -o-transition: all .2s ease-in;
  transition: all .2s ease-in;
}

.site-overview:hover, .header-inner:hover {
  opacity: 1;
}

// disable top bar
.headband {
  display: none;
}

.post-footer {
  padding: 30px 0 20px 0;
}

// article <p> margin
p {
  margin: 0 0 5px 0;
}

// quote
code {
  padding: 5px 4px 2px 4px
  background: #eee8d5;
}

// background & line-height
body {
  line-height: 1.6;
  background: #fff;
}

img {
  max-height: 500px;
}



// 侧边栏
.header-inner {
  background-image: url("/images/site-meta-bg/sky.jpg");
  background-size: cover;
}

// 侧边栏 - 上
//.site-meta {
//  background-color: rgba(0,19,32, 0.8);
//}
.site-nav .menu .menu-item a {
  color: #f9f9f9;
  border-bottom: none;
}
.site-nav .menu .menu-item a:hover {
  border-bottom: none;
}
.site-nav .menu .menu-item a:hover, .site-nav .menu .menu-item-active a {
  background: rgba(0, 0, 0, 0.2);
}


// 侧边栏 - 下
.site-overview {
  opacity: 0.3;
}

.local-search-pop-overlay {
  opacity: 1;
  background: none;
}


.site-overview, .header-inner {
  -webkit-transition: all .2s ease-in;
  -moz-transition: all .2s ease-in;
  -o-transition: all .2s ease-in;
  transition: all .2s ease-in;
}

.site-overview:hover, .header-inner:hover {
  opacity: 1;
}

// disable top bar
.headband { display: none;}

// 文章之间的间隔
.post-footer { padding: 20px 0 15px 0;}
.post-button { padding-top: 20px;}

.post:last-child {
  hr {
    display: none;
  }
}

// 标题的字体:
.posts-expand .post-title {
  font-size: 24px;
}

// article <p> margin
p { margin: 0 0 8px 0;}

// quote
code {
  padding: 3px 4px 2px 4px
  background: #eee8d5;
}

// background & line-height
body {
  line-height: 1.5;
  background: #fff;
}

img {
  max-height: 500px;
}


